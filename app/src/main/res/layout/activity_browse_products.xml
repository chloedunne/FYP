<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peach"
    tools:context=".BrowseProductsActivity">

    <ImageView
        android:id="@+id/logo_browse_products_activity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/peach"
        app:srcCompat="@drawable/peach_top_logo" />

    <SearchView
        android:id="@+id/searchProducts"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/clear_button"
        android:layout_below="@id/logo_browse_products_activity"
        android:elevation="5dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_browse_products_activity">

    </SearchView>
    <HorizontalScrollView
        android:id="@id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchProducts">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/lipstickButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchProducts"
                android:background="@drawable/round_btn"
                android:backgroundTint="#FC6161"
                app:backgroundTint="@color/peach"
                android:text="Lipstick" />
    <Button
        android:id="@+id/liplinerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lipstickButton"
        android:text="Lipliner"
        android:layout_below="@id/searchProducts"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FC6161"
        app:backgroundTint="@color/peach"/>
    <Button
        android:id="@+id/foundationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/liplinerButton"
        android:text="Foundation"
        android:layout_below="@id/searchProducts"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FC6161"
        app:backgroundTint="@color/peach"/>
    <Button
        android:id="@+id/eyeshadowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/foundationButton"
        android:text="Eyeshadow"
        android:layout_below="@id/searchProducts"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FC6161"
        app:backgroundTint="@color/peach"/>
            <Button
                android:id="@+id/eyelinerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/foundationButton"
                android:text="Eyeliner"
                android:layout_below="@id/searchProducts"
                android:background="@drawable/round_btn"
                android:backgroundTint="#FC6161"
                app:backgroundTint="@color/peach"/>

            <Button
                android:id="@+id/blushButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchProducts"
                android:layout_toRightOf="@id/eyelinerButton"
                android:background="@drawable/round_btn"
                android:backgroundTint="#FC6161"
                android:text="Blush"
                app:backgroundTint="@color/peach" />

            <Button
        android:id="@+id/bronzerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/blushButton"
        android:text="Bronzer"
        android:layout_below="@id/searchProducts"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FC6161"
        app:backgroundTint="@color/peach"/>
    <Button
        android:id="@+id/eyebrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bronzerButton"
        android:text="Eyebrows"
        android:layout_below="@id/searchProducts"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FC6161"
        app:backgroundTint="@color/peach"/>
    <Button
        android:id="@+id/mascaraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/eyebrowButton"
        android:text="Mascara"
        android:layout_below="@id/searchProducts"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FC6161"
        app:backgroundTint="@color/peach"/>
        </LinearLayout>
    </HorizontalScrollView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/scrollView"
            android:elevation="2dp"
            />



</RelativeLayout>