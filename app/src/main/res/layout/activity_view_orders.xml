<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peach"
    tools:context=".ViewOrdersActivity">

  <ImageView
      android:id="@+id/logo_view_orders_activity"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      app:srcCompat="@drawable/peach_top_logo" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/orderHistory"
      android:gravity="center"
      android:textSize="16sp"
      android:layout_below="@id/logo_view_orders_activity"
      android:fontFamily="@font/biryani_extralight"
      android:textColor="@color/white"
      android:layout_centerHorizontal="true"
      android:text="Order History"/>

  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/orderHistory"
      android:id="@+id/orderHistoryRCV"/>

  </RelativeLayout>